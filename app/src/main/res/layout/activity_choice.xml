<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.choice.ChoiceActivity"
    android:background="@drawable/blue_bg_container"
    android:id="@+id/container_choice">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/blue_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/yellow_bg_reversed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_homeTitle"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/home_pict"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:src="@drawable/home_pict"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19999999" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/title_greeting_logo"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed-light"
        app:layout_constraintTop_toBottomOf="@id/home_pict"
        app:layout_constraintBottom_toTopOf="@id/tv_homeTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_homeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/froadmile_font"
        android:gravity="center"
        android:text="@string/welcome_to_schnill"
        android:textColor="@color/black"
        android:textSize="86sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/home_pict"
        app:layout_constraintStart_toStartOf="@id/home_pict"
        app:layout_constraintTop_toBottomOf="@id/home_pict"
        app:layout_constraintVertical_bias="0.110000014" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center"
        android:text="@string/choice_greeting"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@id/blue_bg"
        app:layout_constraintRight_toRightOf="@id/blue_bg"
        app:layout_constraintBottom_toTopOf="@id/btn_reminder"
        app:layout_constraintTop_toTopOf="@id/blue_bg"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/btn_timer"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_timer_line"
        app:layout_constraintStart_toStartOf="@id/home_pict"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_homeTitle"
        android:text="@string/title_timer"/>

    <Button
        android:drawableTop="@drawable/ic_calendar_todo_fill__1_"
        android:id="@+id/btn_reminder"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/home_pict"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_homeTitle"
        android:text="@string/title_reminder"/>
</androidx.constraintlayout.widget.ConstraintLayout>
